{
  "name": "apple-music-linux",
  "version": "1.1.1",
  "main": "index.js",
  "description": "Electron wrapper for Apple Music",
  "author": "17hoehbr",
  "homepage": "https://github.com/17hoehbr/apple-music-linux",
  "keywords": [
    "Apple",
    "Apple Music"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:17hoehbr/apple-music-linux"
  },

  "license": "MIT",
  "buildResources": "assets",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron --disable-gpu .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "dependencies": {
    "electron-window-state": "5.0.3",
    "electron-updater": "4.3.5",
    "electron-log": "^1.3.0"
  },
  "devDependencies": {
    "electron": "https://github.com/castlabs/electron-releases#v8.5.3-wvvmp",
    "electron-builder": "^22.7.0",
    "electron-webpack": "^2.8.2",
    "webpack": "~4.42.1"
  },
  "build": {
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    },
    "appId": "apple-music",
    "extends": null,
    "files": [
      "**/*",
      "assets/icon.*"
    ],
    "linux": {
      "icon": "./assets/icon.icns",
      "category": "AudioVideo;Audio",
      "desktop": {
        "Name": "Apple Music",
        "icon": "./assets/icon.icns",
        "Comment": "Unofficial Apple Music client for Linux",
        "StartupWMClass": "apple-music"
      },
      "target": [
        "AppImage"
      ],
      "publish": [{
        "provider": "github",
        "owner": "17hoehbr",
        "repo": "apple-music-linux"
      }]
    }
  }
}

